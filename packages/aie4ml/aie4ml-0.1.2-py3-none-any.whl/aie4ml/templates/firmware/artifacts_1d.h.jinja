#pragma once

#ifdef __X86SIM__
  #define AIE_BLOCK_QUAL static thread_local const
  #define AIE_PTR_TBL_QUAL static thread_local
#else
  #define AIE_BLOCK_QUAL alignas(aie::vector_decl_align) const
  #define AIE_PTR_TBL_QUAL
#endif

{% for row in data %}
{% set ch = loop.index0 %}

AIE_BLOCK_QUAL {{ dtype }} {{ artifact_name }}_{{ inst_name }}_{{ ch }}[{{ row|length }}] = {
  {%- for v in row -%}
    {{ v|int }}{{ ", " if not loop.last else "" }}
  {%- endfor -%}
};

{% endfor %}

AIE_PTR_TBL_QUAL {{ dtype }} const* {{ artifact_name }}_{{ inst_name }}[{{ data|length }}] = {
{% for ch in range(data|length) %}
  {{ artifact_name }}_{{ inst_name }}_{{ ch }}{{ ", " if not loop.last else "" }}
{% endfor %}
};

#undef AIE_BLOCK_QUAL
#undef AIE_PTR_TBL_QUAL
