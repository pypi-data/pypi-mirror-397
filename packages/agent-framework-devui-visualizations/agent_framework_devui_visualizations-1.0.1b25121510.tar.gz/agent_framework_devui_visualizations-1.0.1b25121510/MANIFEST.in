# Include the main package
recursive-include agent_framework_devui *.py
# Include UI static assets
recursive-include agent_framework_devui/ui *.html *.css *.js *.svg
recursive-include agent_framework_devui/ui/assets *
recursive-include agent_framework_devui/models *.py
recursive-include agent_framework_devui/_openai *.py

# Include the namespace package for compatibility
recursive-include agent_framework *.py

# Include documentation and configuration files
include README.md
include LICENSE
include pyproject.toml

# Exclude test files and development files
recursive-exclude tests *
recursive-exclude docs *
exclude .gitignore
exclude build.sh
exclude dev.md