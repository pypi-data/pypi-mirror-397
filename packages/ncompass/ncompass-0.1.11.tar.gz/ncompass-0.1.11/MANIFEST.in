# Include documentation and metadata files
include README.md
include LICENSE
include pyproject.toml
include setup.py

# Include Rust source for building from source
recursive-include ncompass_rust *.rs *.toml
include ncompass_rust/trace_converters/.cargo/config.toml

# Include type checking marker file (PEP 561)
include ncompass/py.typed

# Include documentation directory
recursive-include docs *.md *.rst

# Include examples
recursive-include examples *.py *.md

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so
global-exclude .DS_Store

# Exclude test files from distribution
exclude tests/*
recursive-exclude tests *

# Exclude development and build files
exclude .gitignore
exclude .git
recursive-exclude .git *

# Exclude cache and temporary files
global-exclude *.cache
global-exclude .coverage
global-exclude htmlcov

