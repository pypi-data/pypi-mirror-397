# {{ project_name }} Configuration
# Copy this file to .env and update the values

# Application
APP_NAME={{ project_name }}
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# Server
HOST=127.0.0.1
PORT=8000

# Database
# Use async drivers: postgresql+asyncpg://, mysql+aiomysql://, sqlite+aiosqlite://
DATABASE_URL=sqlite+aiosqlite:///./{{ project_name_snake }}.db

# Security
# IMPORTANT: Generate a secure secret key for production!
# Python: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-ME-IN-PRODUCTION-USE-SECRETS-TOKEN
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (comma-separated list of origins)
CORS_ORIGINS=["http://localhost:3000"]
