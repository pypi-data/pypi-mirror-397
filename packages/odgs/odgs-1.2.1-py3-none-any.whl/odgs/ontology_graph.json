{
    "meta": {
        "schema_version": "1.0",
        "project_name": "ODGS_Master_Ontology",
        "description": "The connective tissue linking Metrics, Rules, Processes, Factors, and Dimensions into a single traversable graph for AI grounding and automated governance.",
        "urn_format": "urn:odgs:<domain>:<id>"
    },
    "domains": {
        "metric": {
            "source_file": "standard_metrics.json",
            "urn_prefix": "urn:odgs:metric"
        },
        "rule": {
            "source_file": "standard_data_rules.json",
            "urn_prefix": "urn:odgs:rule"
        },
        "process": {
            "source_file": "business_process_maps.json",
            "urn_prefix": "urn:odgs:process"
        },
        "factor": {
            "source_file": "root_cause_factors.json",
            "urn_prefix": "urn:odgs:factor"
        },
        "dimension": {
            "source_file": "standard_dq_dimensions.json",
            "urn_prefix": "urn:odgs:dimension"
        }
    },
    "relationship_types": [
        {
            "type": "DEPENDS_ON",
            "description": "Calculation dependency (e.g., Profit depends on Revenue)."
        },
        {
            "type": "VALIDATED_BY",
            "description": "A metric or data element is protected by a specific rule."
        },
        {
            "type": "IMPACTS_METRIC",
            "description": "A root cause factor negatively affects a specific metric."
        },
        {
            "type": "OCCURS_IN",
            "description": "A root cause factor is highly likely to happen in this process stage."
        },
        {
            "type": "MEASURES_DIMENSION",
            "description": "A rule or metric is a direct proxy for a data quality dimension."
        },
        {
            "type": "BLOCKS_PROCESS",
            "description": "A data rule failure will stop this process stage (Hard Stop)."
        }
    ],
