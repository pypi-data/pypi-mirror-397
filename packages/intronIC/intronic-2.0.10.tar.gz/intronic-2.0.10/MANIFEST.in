# Include documentation
include README.md
include INSTALL.md
include QUICKSTART.md
include PACKAGING_STRATEGY.md
include LICENSE
include CLAUDE.md

# Include data files (PWMs, references, pretrained models, metadata)
recursive-include data *.iic *.iic.gz *.fasta *.pkl *.json

# Include configuration files
include pyproject.toml
include pixi.toml
include pytest.ini

# Exclude build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
global-exclude *.egg-info

# Exclude test outputs (but keep data/*.pkl for pretrained models)
global-exclude *.log.iic
global-exclude *.meta.iic
global-exclude *.bed.iic
global-exclude *.seqs.iic
global-exclude *.scores.iic
