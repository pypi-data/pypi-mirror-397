<odoo>
    <record id="view_report_async_admin_tree" model="ir.ui.view">
        <field name="name">report.async.tree - Tree Admin</field>
        <field name="model">report.async</field>
        <field name="mode">extension</field>
        <field name="priority">17</field>
        <field name="inherit_id" ref="report_async.view_report_async_tree" />
        <field name="groups_id" eval="[(4, ref('base.group_erp_manager'))]" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">true</attribute>
                    <attribute name="edit">true</attribute>
                    <attribute name="delete">true</attribute>
                </xpath>
            </data>
        </field>
    </record>
    <record id="view_report_async_admin_form" model="ir.ui.view">
        <field name="name">report.async.tree - Form Admin</field>
        <field name="model">report.async</field>
        <field name="mode">extension</field>
        <field name="priority">17</field>
        <field name="inherit_id" ref="report_async.view_report_async_form" />
        <field name="groups_id" eval="[(4, ref('base.group_erp_manager'))]" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//form" position="attributes">
                    <attribute name="create">true</attribute>
                    <attribute name="edit">true</attribute>
                    <attribute name="delete">true</attribute>
                </xpath>
            </data>
        </field>
    </record>

</odoo>
