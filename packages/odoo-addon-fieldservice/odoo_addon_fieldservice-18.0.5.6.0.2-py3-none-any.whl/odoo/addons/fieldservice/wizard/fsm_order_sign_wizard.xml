<odoo>
    <record id="fsm_order_sign_wizard_view_form" model="ir.ui.view">
        <field name="model">fsm.order.sign.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="signed_by" />
                    <field name="signature" widget="signature" />
                </group>
                <footer>
                    <button
                        name="action_sign"
                        string="Sign"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="fsm_order_sign_wizard_action" model="ir.actions.act_window">
        <field name="name">Customer Signature</field>
        <field name="res_model">fsm.order.sign.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
