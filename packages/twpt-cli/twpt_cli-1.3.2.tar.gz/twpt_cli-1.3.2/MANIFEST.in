# Include documentation files
include README.md
include LICENSE

# Include requirements
include requirements.txt

# Include protobuf definitions and generated files
recursive-include twpt_cli/sdk *.proto
recursive-include twpt_cli/sdk *_pb2*.py

# Include webui templates and static files
recursive-include twpt_cli/webui/templates *.html
recursive-include twpt_cli/webui/static *
recursive-include twpt_cli/webui_simple/templates *.html
recursive-include twpt_cli/webui_simple/static *

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so
global-exclude .DS_Store
