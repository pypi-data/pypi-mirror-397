{
  "workflow_templates": [
    {
      "id": "template_workflow_weekly_report",
      "name": "周报生成工作流",
      "description": "用于生成周报的完整工作流程，包括数据收集、内容生成、格式调整和保存",
      "type": "weekly_report",
      "prompt": "请根据以下工作流模板和提示词创建一个完整的周报生成工作流，确保流程清晰、步骤完整、可执行性强。",
      "steps": [
        {
          "id": "step_1",
          "name": "数据收集",
          "description": "收集本周工作数据，包括任务完成情况、项目进度、关键成果等",
          "action": "data_collection",
          "parameters": {
            "data_sources": ["task_tracker", "project_management", "time_tracker"],
            "time_range": "current_week"
          }
        },
        {
          "id": "step_2",
          "name": "内容生成",
          "description": "根据收集的数据和模板生成周报内容",
          "action": "content_generation",
          "parameters": {
            "template_id": "default",
            "prompt": "请根据收集的数据生成专业的周报，内容要详细、具体、符合实际工作情况。",
            "output_format": "txt"
          }
        },
        {
          "id": "step_3",
          "name": "格式调整",
          "description": "调整周报格式，确保符合公司规范",
          "action": "format_adjustment",
          "parameters": {
            "format_settings": {
              "font_name": "微软雅黑",
              "font_size": 12,
              "line_spacing": 1.5,
              "margin": {
                "top": 2.54,
                "right": 2.54,
                "bottom": 2.54,
                "left": 2.54
              }
            }
          }
        },
        {
          "id": "step_4",
          "name": "内容审核",
          "description": "审核周报内容，确保准确无误",
          "action": "content_review",
          "parameters": {
            "review_items": ["accuracy", "completeness", "professionalism", "compliance"]
          }
        },
        {
          "id": "step_5",
          "name": "保存与分享",
          "description": "保存周报并分享给相关人员",
          "action": "save_and_share",
          "parameters": {
            "save_location": "reports",
            "sharing_channels": ["email", "team_chat", "document_management"]
          }
        }
      ],
      "created_at": "2025-12-10",
      "updated_at": "2025-12-10"
    },
    {
      "id": "template_workflow_meeting_minutes",
      "name": "会议纪要生成工作流",
      "description": "用于生成会议纪要的完整工作流程，包括会议准备、内容记录、整理生成和分发",
      "type": "meeting_minutes",
      "prompt": "请根据以下工作流模板和提示词创建一个完整的会议纪要生成工作流，确保流程清晰、步骤完整、可执行性强。",
      "steps": [
        {
          "id": "step_1",
          "name": "会议准备",
          "description": "准备会议相关材料，包括议程、参会人员、会议室等",
          "action": "meeting_preparation",
          "parameters": {
            "agenda": "meeting_agenda",
            "attendees": "meeting_attendees",
            "meeting_room": "meeting_room"
          }
        },
        {
          "id": "step_2",
          "name": "会议记录",
          "description": "记录会议内容，包括讨论要点、决策结果、行动项等",
          "action": "meeting_recording",
          "parameters": {
            "recording_method": "audio_transcription",
            "key_points": true,
            "decisions": true,
            "action_items": true
          }
        },
        {
          "id": "step_3",
          "name": "内容整理",
          "description": "整理会议记录，确保内容清晰、结构合理",
          "action": "content_organization",
          "parameters": {
            "structure": "standard_meeting_minutes",
            "format": "markdown"
          }
        },
        {
          "id": "step_4",
          "name": "内容生成",
          "description": "根据整理的内容生成正式会议纪要",
          "action": "content_generation",
          "parameters": {
            "template_id": "meeting_minutes",
            "prompt": "请根据整理的会议记录生成正式的会议纪要，内容要准确、完整、结构清晰。",
            "output_format": "docx"
          }
        },
        {
          "id": "step_5",
          "name": "审核与分发",
          "description": "审核会议纪要并分发给相关人员",
          "action": "review_and_distribute",
          "parameters": {
            "reviewers": ["meeting_chair", "secretary"],
            "distribution_channels": ["email", "document_management", "team_chat"]
          }
        }
      ],
      "created_at": "2025-12-10",
      "updated_at": "2025-12-10"
    },
    {
      "id": "template_workflow_project_plan",
      "name": "项目计划生成工作流",
      "description": "用于生成项目计划的完整工作流程，包括需求分析、任务分解、进度安排和资源分配",
      "type": "project_plan",
      "prompt": "请根据以下工作流模板和提示词创建一个完整的项目计划生成工作流，确保流程清晰、步骤完整、可执行性强。",
      "steps": [
        {
          "id": "step_1",
          "name": "需求分析",
          "description": "分析项目需求，确定项目目标、范围和交付物",
          "action": "requirement_analysis",
          "parameters": {
            "requirements": "project_requirements",
            "stakeholders": "project_stakeholders"
          }
        },
        {
          "id": "step_2",
          "name": "任务分解",
          "description": "将项目分解为具体的任务和子任务",
          "action": "task_decomposition",
          "parameters": {
            "decomposition_method": "work_breakdown_structure",
            "level": 3
          }
        },
        {
          "id": "step_3",
          "name": "进度安排",
          "description": "制定项目进度计划，包括任务 dependencies、里程碑和截止日期",
          "action": "schedule_planning",
          "parameters": {
            "planning_method": "gantt_chart",
            "time_unit": "day"
          }
        },
        {
          "id": "step_4",
          "name": "资源分配",
          "description": "分配项目所需的资源，包括人员、设备和预算",
          "action": "resource_allocation",
          "parameters": {
            "resource_types": ["human", "equipment", "budget"],
            "allocation_method": "optimal"
          }
        },
        {
          "id": "step_5",
          "name": "计划生成",
          "description": "生成正式的项目计划文档",
          "action": "content_generation",
          "parameters": {
            "template_id": "project_plan",
            "prompt": "请根据以上分析生成正式的项目计划文档，内容要详细、完整、结构清晰，包含所有必要的项目信息。",
            "output_format": "docx"
          }
        }
      ],
      "created_at": "2025-12-10",
      "updated_at": "2025-12-10"
    }
  ]
}