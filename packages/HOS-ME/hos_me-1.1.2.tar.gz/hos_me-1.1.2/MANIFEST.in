# 包含项目根目录下的必要文件
include requirements.txt
include README.md
include __init__.py
include workflow_templates.json
include workflow_prompt_templates.json
include workflows.json

# 包含模板目录
recursive-include templates *
# 只包含模板文件，排除配置文件
recursive-include templates_storage *.txt

# 包含静态资源目录
recursive-include static *

# 包含HOS_ME目录下的所有Python文件
recursive-include HOS_ME *.py

# 排除敏感文件和不必要的目录
prune **/__pycache__
prune *.egg-info
prune dist
prune build
prune logs
# 排除敏感文件
exclude key.txt
exclude config.json
exclude system_settings.json
exclude batches.json
exclude templates_storage/templates_config.json
# 排除测试文件
exclude test_*.py
# 排除配置文件
exclude .pypirc
exclude .pyarmor_config
# 排除开发相关文件
exclude pyarmor.bug.log
exclude check_dir.py
exclude check_package.py
# 排除Excel模板文件
exclude prompt_import_template.xlsx
