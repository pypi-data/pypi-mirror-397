# Documentation Makefile
# Commands for building, serving, and deploying documentation

.PHONY: help install serve build deploy clean setup check

# Default target
help:
	@echo "ðŸ“š Documentation Commands:"
	@echo "  install   - Install documentation dependencies"
	@echo "  setup     - Initial setup for documentation"
	@echo "  serve     - Serve documentation locally (http://localhost:8000)"
	@echo "  build     - Build documentation for production"
	@echo "  deploy    - Deploy documentation to GitHub Pages"
	@echo "  clean     - Clean documentation build artifacts"
	@echo "  check     - Validate documentation links and structure"

# Install documentation dependencies
install:
	@echo "ðŸ“¦ Installing documentation dependencies..."
	pip install -r ../requirements-docs.txt

# Setup documentation environment
setup: install
	@echo "ðŸ”§ Setting up documentation environment..."
	@if [ ! -f mkdocs.yml ]; then \
		echo "âŒ mkdocs.yml not found in docs directory"; \
		exit 1; \
	fi

# Serve documentation locally
serve: setup
	@echo "ðŸš€ Serving documentation locally..."
	mkdocs serve -f mkdocs.yml

# Build documentation
build: setup
	@echo "ðŸ—ï¸  Building documentation..."
	mkdocs build -f mkdocs.yml

# Deploy to GitHub Pages
deploy: setup
	@echo "ðŸš€ Deploying documentation to GitHub Pages..."
	mkdocs gh-deploy -f mkdocs.yml

# Clean build artifacts
clean:
	@echo "ðŸ§¹ Cleaning documentation build artifacts..."
	rm -rf site/
	@echo "âœ… Documentation artifacts cleaned"

# Check documentation
check: setup
	@echo "ðŸ” Checking documentation..."
	@# Check for broken links (requires linkchecker)
	@if command -v linkchecker >/dev/null 2>&1; then \
		mkdocs build -f mkdocs.yml; \
		linkchecker site/; \
	else \
		echo "ðŸ’¡ Install linkchecker for link validation: pip install linkchecker"; \
	fi
	@echo "âœ… Documentation check complete" 