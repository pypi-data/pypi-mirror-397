# Application
ENV=dev
DEBUG=true
PORT=8000

# Database (SQLite by default, no configuration needed)
# Uncomment below to use MySQL/PostgreSQL:
{% if is_tortoise -%}
# DATABASE_URL=mysql://user:password@localhost:3306/{{ project_name_snake }}
# DATABASE_URL=postgres://user:password@localhost:5432/{{ project_name_snake }}
{% else -%}
# DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/{{ project_name_snake }}
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/{{ project_name_snake }}
{% endif %}

# Redis (optional, used for caching/rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# JWT (change in production!)
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
{% if with_celery %}

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TIMEZONE=UTC
{% endif %}

