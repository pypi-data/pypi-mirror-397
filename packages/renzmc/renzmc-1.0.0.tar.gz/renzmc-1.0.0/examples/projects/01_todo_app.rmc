// Fungsi untuk menandai todo selesai (berdasarkan index)
fungsi tandai_selesai(idx):
    jika idx < 1 atau idx > panjang(todos)
        hasil {"sukses": salah, "pesan": "Index tidak valid!"}
    selesai
    
    // Ambil todo dari list
    todo_item itu todos[idx - 1]
    
    // Pindahkan ke list selesai
    tambah(todos_selesai, todo_item)
    hapus_pada(todos, idx - 1)
    
    hasil {"sukses": benar, "pesan": "Todo ditandai selesai!"}
selesai

// Fungsi untuk statistik
buat fungsi tampilkan_statistik
    total itu panjang(todos) + panjang(todos_selesai)
    selesai_count itu panjang(todos_selesai)
    belum_selesai itu panjang(todos)
    
    persentase itu 0
    jika total > 0
        persentase itu (selesai_count / total) * 100
    selesai
    
