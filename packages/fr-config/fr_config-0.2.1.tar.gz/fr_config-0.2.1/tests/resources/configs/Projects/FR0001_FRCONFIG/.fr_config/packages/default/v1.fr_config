{
    variables: {
        ENABLE_LEGACY_RENDER: "0",
        PATH: {
            "cascade": "append",
            "value": "/path/to/root/thing"
        },
        PREPATH: {
            "cascade": "prepend",
            "value": "/path/to/other/thing"
        }
    },
    packages: ["pyside-5.15.2", "python-3.10"],

    tools: {
        maya: {
            command: "maya.exe",
            packages: [
                "maya-2023.2",
                "pymel-4",
                "python-3.9.7"
            ],
            variables: {
                MAYA_RENDER_SETUP_INCLUDE_ALL_LIGHTS: "0",
                MAYA_SCRIPT_PATH: {
                    value: "/path/to/mel/scripts",
                    cascade: "append"
                }
            }
        },
        rv: {
            command: "rv.exe",
            packages: [
                "rv_local_install",
                "rv_fr_plugins"
            ],
            variables: {
                SOME_RV_FLAG: "1"
            }
        }
    }
}