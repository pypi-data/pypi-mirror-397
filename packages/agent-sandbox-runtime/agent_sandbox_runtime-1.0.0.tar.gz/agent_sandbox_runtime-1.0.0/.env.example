# =============================================================================
# Agent Sandbox Runtime - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Supports 6 LLM providers: Groq, OpenRouter, Anthropic, Google, Ollama, OpenAI

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================
# Select your provider: groq, openrouter, anthropic, google, ollama, openai
LLM_PROVIDER=groq

# -----------------------------------------------------------------------------
# GROQ (Recommended for testing - Ultra fast inference)
# Get your key: https://console.groq.com
# -----------------------------------------------------------------------------
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
# Available models:
# - llama-3.3-70b-versatile (best for code)
# - llama-3.1-70b-versatile
# - llama-3.1-8b-instant (fastest)
# - mixtral-8x7b-32768
# - gemma2-9b-it

# -----------------------------------------------------------------------------
# OPENROUTER (Access to 100+ models with one API key)
# Get your key: https://openrouter.ai/keys
# -----------------------------------------------------------------------------
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct:free
# Popular models:
# FREE:
# - meta-llama/llama-3.3-70b-instruct:free
# - qwen/qwen-2.5-coder-32b-instruct:free
# - deepseek/deepseek-chat:free
# PREMIUM:
# - anthropic/claude-3.5-sonnet
# - openai/gpt-4o
# - google/gemini-pro-1.5

# -----------------------------------------------------------------------------
# ANTHROPIC (Claude models - Best reasoning)
# Get your key: https://console.anthropic.com
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
# Available models:
# - claude-3-5-sonnet-20241022 (best for code)
# - claude-3-5-haiku-20241022 (fast)
# - claude-3-opus-20240229 (most powerful)

# -----------------------------------------------------------------------------
# GOOGLE (Gemini models - Large context)
# Get your key: https://aistudio.google.com/apikey
# -----------------------------------------------------------------------------
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-1.5-flash
# Available models:
# - gemini-2.0-flash-exp (latest)
# - gemini-1.5-pro (best quality)
# - gemini-1.5-flash (fast)
# - gemini-1.5-flash-8b (fastest)

# -----------------------------------------------------------------------------
# OLLAMA (Local models - No API key needed!)
# Install: https://ollama.ai
# Then run: ollama pull qwen2.5-coder:7b
# -----------------------------------------------------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:7b
# Recommended models for code:
# - qwen2.5-coder:32b (best, needs 20GB+ RAM)
# - qwen2.5-coder:14b (great, needs 10GB+ RAM)
# - qwen2.5-coder:7b (good, needs 5GB+ RAM)
# - codellama:13b
# - deepseek-coder-v2:16b

# -----------------------------------------------------------------------------
# OPENAI (GPT models)
# Get your key: https://platform.openai.com/api-keys
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
# Available models:
# - gpt-4o (best)
# - gpt-4o-mini (fast, cheap)
# - gpt-4-turbo
# - o1-preview (reasoning)

# =============================================================================
# SANDBOX CONFIGURATION
# =============================================================================
SANDBOX_TIMEOUT_SECONDS=5.0
SANDBOX_MEMORY_LIMIT_MB=256
SANDBOX_CPU_LIMIT=0.5
SANDBOX_NETWORK_ENABLED=false
SANDBOX_POOL_SIZE=5
SANDBOX_IMAGE=agent-sandbox-python:latest

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_DEBUG=false

# =============================================================================
# VECTOR DATABASE (Qdrant)
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=agent_memory

# =============================================================================
# REDIS (Caching & Queue)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
MAX_REFLEXION_ATTEMPTS=3
BENCHMARK_SUITE=full

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=console
