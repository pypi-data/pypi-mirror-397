{% raw %}{% load django_vite %}{% endraw %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ project_name.title() }} - Built with Django + Inertia.js">
    <title>{{ project_name.title() }}</title>
    
    <!-- CSRF Token -->
    <meta name="csrf-token" content="{% raw %}{{ csrf_token }}{% endraw %}">
    
    <!-- Inertia.js -->
    {% raw %}{{ inertia }}{% endraw %}
    
    <!-- Vite Assets -->
    {% raw %}{% vite_hmr_client %}{% endraw %}
    {% if frontend == 'react' %}{% raw %}{% vite_react_refresh %}{% endraw %}{% endif %}
    {% if frontend == 'react' %}
        {% if use_typescript %}
            {% raw %}{% vite_asset 'main.tsx' %}{% endraw %}
        {% else %}
            {% raw %}{% vite_asset 'main.jsx' %}{% endraw %}
        {% endif %}
    {% else %}
        {% if use_typescript %}
            {% raw %}{% vite_asset 'main.ts' %}{% endraw %}
        {% else %}
            {% raw %}{% vite_asset 'main.js' %}{% endraw %}
        {% endif %}
    {% endif %}
</head>
<body>
    <!-- Inertia app will mount here -->
    {% raw %}{% block inertia %}{% endblock %}{% endraw %}
</body>
</html>