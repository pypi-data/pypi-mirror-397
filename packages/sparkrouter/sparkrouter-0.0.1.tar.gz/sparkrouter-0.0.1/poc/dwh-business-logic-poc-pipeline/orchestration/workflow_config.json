{
  "description": "Downstream job orchestration configuration",
  "version": "1.1.0",

  "workflows": {
    "transform_images": {
      "description": "Image transformation pipeline - triggers filter_images on success",
      "on_success": [
        {
          "type": "sqs_mwaa",
          "dag_id": "filter_images_glue",
          "parameter_mapping": {
            "transform_output_path": "artifacts.output_path",
            "start_date": "metrics.start_date",
            "end_date": "metrics.end_date",
            "created_by": "metrics.created_by"
          }
        }
      ],
      "on_approval": [
        {
          "type": "sqs_mwaa",
          "dag_id": "filter_images_glue",
          "parameter_mapping": {
            "transform_output_path": "artifacts.output_path",
            "start_date": "metrics.start_date",
            "end_date": "metrics.end_date",
            "created_by": "metrics.created_by"
          }
        }
      ]
    }
  }
}
