# Core metadata
include README_PYPI.md
include LICENSE
include pyproject.toml
include CHANGELOG.md
include CITATION.cff
include CONTRIBUTING.md

# Package source and assets
recursive-include psi_continuum_v2 *.py
recursive-include psi_continuum_v2 *.mplstyle

# Exclude large or non-package directories
recursive-exclude data *
recursive-exclude results *
recursive-exclude examples *

# Global excludes
global-exclude *.pyc
global-exclude __pycache__/*
global-exclude *.log
