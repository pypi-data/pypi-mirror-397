<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!--Email Templates -->
        <record id="created_response_ticket_template" model="mail.template">
            <field name="name">Send mail (The opportunity ran from support@)</field>
            <field name="description">Send mail (The opportunity ran from support@)</field>
            <field name="model_id" ref="helpdesk_mgmt.model_helpdesk_ticket" />
            <field name="email_to">{{ object.partner_email }}</field>
            <field name="subject">The ticket {{ object.number }}</field>
            <field name="auto_delete" eval="False" />
            <field name="lang">{{ object.partner_id.lang or 'en_US' }}</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        <t t-esc="object.description or 'No description available'" />
                    </p>
                </div>
            </field>
        </record>

        <record id="replying_to_email_ticket_template" model="mail.template">
            <field name="name">Replying to email</field>
            <field name="description">Replying to email default template</field>
            <field name="model_id" ref="helpdesk_mgmt.model_helpdesk_ticket" />
            <field name="email_to">{{ object.partner_email }}</field>
            <field name="subject"></field>
            <field name="auto_delete" eval="False" />
            <field name="lang">{{ object.partner_id.lang or 'en_US' }}</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        <t t-esc="object.description or 'No description available'" />
                    </p>
                </div>
            </field>
        </record>

        <record id="resending_email_ticket_template" model="mail.template">
            <field name="name">Resending email</field>
            <field name="description">Resending email default template</field>
            <field name="model_id" ref="helpdesk_mgmt.model_helpdesk_ticket" />
            <field name="email_to">{{ object.partner_email }}</field>
            <field name="subject"></field>
            <field name="auto_delete" eval="False" />
            <field name="lang">{{ object.partner_id.lang or 'en_US' }}</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        <t t-esc="object.description or 'No description available'" />
                    </p>
                </div>
            </field>
        </record>

    </data>
</odoo>
