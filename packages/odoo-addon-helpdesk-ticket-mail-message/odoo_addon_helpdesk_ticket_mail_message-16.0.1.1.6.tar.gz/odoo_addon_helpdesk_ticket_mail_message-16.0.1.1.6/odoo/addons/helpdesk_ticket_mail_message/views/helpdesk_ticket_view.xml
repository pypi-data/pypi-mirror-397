<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="helpdesk_ticket_mail_message_form_view" model="ir.ui.view">
      <field name="name">helpdesk.ticket.mail.message.form.view</field>
      <field name="model">helpdesk.ticket</field>
      <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form"/>
      <field name="arch" type="xml">
          <xpath expr="//div[@name='button_box']" position="inside">
              <button name="mail_compose_message_action" string="Send Email" type="object"
                      icon="fa-reply text-warning" />
          </xpath>
          <xpath expr="//page[@name='description']" position="after">
              <page string="Communications" name="communications">
                <button name="mail_compose_message_action_note" string="Create note" type="object" />
                <field
                    name="message_emails_ids"
                    widget="list_mail_icon_one2many"
                    options="{'no_create': True, 'no_open': True, 'no_quick_create': True, 'no_edit': True, 'no_delete': True}"
                    context="{'active_colors': False ,'limit_fields': ['body']}"
                >
                    <tree editable="false" create="false" delete="false" default_order='date_subject desc'>
                        <field name="message_type_mail"/>
                        <button name="mail_compose_action" help="Reply" type="object" attrs="{'invisible':[('message_type_mail', '=', 'email_sent')]}" icon="fa-reply" title="reply"/>
                        <button name="mail_compose_message_action_all" help="Reply All" type="object" attrs="{'invisible':[('message_type_mail', '!=', 'email_received')]}" icon="fa-reply-all" title="reply to all"/>
                        <button name="mail_compose_message_action_resend" help="Share" type="object" attrs="{'invisible':[('message_type_mail', '=', 'note')]}" icon="fa-share" title="forward" />
                        <field name="date_subject" invisible="1"/>
                        <field name="date" invisible="1"/>
                        <field name="subject" invisible="1"/>
                        <field name="email_from" invisible="1"/>
                        <field name="email_to" invisible="1"/>
                        <field name="email_cc" invisible="1"/>
                        <field
                            name="body"
                            widget="list_message_group_field"
                            options="{'field_groups': [['date','email_from','subject'],['body']]}"
                        />
                        <field name="scheduled_date" string="Scheduled" />
                        <button name="action_cancel_scheduled_email"
                            type="object"
                            icon="fa-trash"
                            title="Cancel Scheduled Email"
                            attrs="{'invisible': [('scheduled_date', '=', False)]}"
                            class="btn-secondary"
                        />
                        <field name="attachment_ids" invisible="1"/>
                        <field name="color_row" invisible="1"/>
                        <field name="color_background_row" invisible="1"/>
                        <field name="message_type" invisible="1"/>
                    </tree>
                </field>
              </page>
          </xpath>
          <field name="partner_email" position="after">
                <field name="partner_category_id" widget="many2many_tags"/>
                <field name="partner_contact_phone"/>
          </field>
          <xpath expr="//notebook/page[@name='other_info']" position="inside">
              <group>
                  <field name="last_email_sent_date"/>
                  <field name="last_email_received_date"/>
              </group>
          </xpath>
      </field>
  </record>
    <record id="helpdesk_ticket_mail_message_tree_view" model="ir.ui.view">
        <field name="name">helpdesk.ticket.mail.message.tree.view</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="color_row" invisible="1"/>
                <field name="color_background_row" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='create_date']" position="attributes">
                <attribute name="widget"></attribute>
            </xpath>
            <xpath expr="//field[@name='last_stage_update']" position="attributes">
                <attribute name="widget"></attribute>
            </xpath>
            <field name="stage_id" position="before">
                <field name="team_id"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </field>
        </field>
    </record>
    <record id="helpdesk_ticket_search_view_enhanced_inherit" model="ir.ui.view">
        <field name="name">helpdesk.ticket.search.view.enhanced.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.helpdesk_ticket_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='stage_id']" position="after">
                <field name="message_emails_tos"/>
                <field name="message_emails_ccs"/>
                <field name="message_emails_froms"/>
            </xpath>
            <xpath expr="//search/field[@name='number']" position="attributes">
                <attribute name="filter_domain">
                    [
                        '|',
                        '|',
                        '|',
                        '|',
                        ('number', 'ilike', self),
                        ('name', 'ilike', self),
                        ('message_emails_tos', 'ilike', self),
                        ('message_emails_ccs', 'ilike', self),
                        ('message_emails_froms', 'ilike', self)
                    ]
                </attribute>
            </xpath>
        </field>
    </record>
    <record id="helpdesk_mgmt.helpdesk_ticket_action" model="ir.actions.act_window">
        <field name="context">{'active_colors': True, 'limit_fields': ['description']}</field>
    </record>
</odoo>
