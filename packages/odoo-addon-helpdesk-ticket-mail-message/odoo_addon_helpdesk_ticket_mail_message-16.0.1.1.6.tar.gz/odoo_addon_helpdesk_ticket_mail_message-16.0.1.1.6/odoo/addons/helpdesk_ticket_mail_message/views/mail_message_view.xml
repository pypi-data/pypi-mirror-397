<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="helpdesk_mail_message_reschedule_form_view" model="ir.ui.view">
        <field name="name">helpdesk.mail.message.reschedule.form.view</field>
        <field name="model">mail.message</field>
        <field name="arch" type="xml">
            <form string="Reschedule Email">
                <group>
                    <field name="email_from" />
                    <field name="email_to" />
                    <field name="email_cc" />
                    <field name="subject" />
                    <field name="reschedule_date" />
                </group>
                <notebook>
                    <page name="body" string="Content">
                        <field
                            name="body"
                            class="oe-bordered-editor"
                            placeholder="Write your message here..."
                            options="{'style-inline': true}"
                            widget="html"
                            force_save="1"/>
                        <group col="4">
                            <field name="attachment_ids" widget="many2many_binary" string="Attach a file" nolabel="1" colspan="2"/>
                        </group>
                    </page>
                </notebook>
                <footer>
                    <button string="Save" type="object" name="save_rescheduled_email" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="helpdesk_mail_message_note_open_form_view" model="ir.ui.view">
        <field name="name">helpdesk.mail.message.note.open.form.view</field>
        <field name="model">mail.message</field>
        <field name="arch" type="xml">
            <form string="Note">
                <group>
                    <field name="subject" />
                </group>
                <notebook>
                    <page name="body" string="Content">
                        <field
                            name="body"
                            class="oe-bordered-editor"
                            placeholder="Write your message here..."
                            options="{'style-inline': true}"
                            widget="html"
                            force_save="1"/>
                        <group col="4">
                            <field name="attachment_ids" widget="many2many_binary" string="Attach a file" nolabel="1" colspan="2"/>
                        </group>
                    </page>
                </notebook>
                <footer>
                    <button string="Save" type="object" name="save_edited_note" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="helpdesk_mail_message_readonly_form_view" model="ir.ui.view">
        <field name="name">helpdesk.mail.message.readonly.form.view</field>
        <field name="model">mail.message</field>
        <field name="arch" type="xml">
            <form string="Email" create="false" edit="false">
                <group>
                    <field name="email_from" readonly="1"/>
                    <field name="email_to" readonly="1"/>
                    <field name="email_cc" readonly="1"/>
                    <field name="subject" readonly="1"/>
                </group>
                <notebook>
                    <page name="body" string="Content">
                        <field
                            name="body"
                            class="oe-bordered-editor"
                            placeholder="Write your message here..."
                            options="{'style-inline': true}"
                            widget="html"
                            force_save="1"
                            readonly="1"/>
                        <group col="4">
                            <field name="attachment_ids" widget="many2many_binary" string="Attachments" nolabel="1" colspan="2" readonly="1"/>
                        </group>
                    </page>
                </notebook>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="helpdesk_mail_message_reschedule_action" model="ir.actions.act_window">
        <field name="name">Reschedule Email</field>
        <field name="res_model">mail.message</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="helpdesk_mail_message_reschedule_form_view"/>
        <field name="target">new</field>
    </record>
    <record id="helpdesk_mail_message_note_open_action" model="ir.actions.act_window">
        <field name="name">Edit Note</field>
        <field name="res_model">mail.message</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="helpdesk_mail_message_note_open_form_view"/>
        <field name="target">new</field>
    </record>
    <record id="helpdesk_mail_message_action_readonly" model="ir.actions.act_window">
        <field name="name">Read Email</field>
        <field name="res_model">mail.message</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="helpdesk_mail_message_readonly_form_view"/>
        <field name="target">new</field>
    </record>
</odoo>
