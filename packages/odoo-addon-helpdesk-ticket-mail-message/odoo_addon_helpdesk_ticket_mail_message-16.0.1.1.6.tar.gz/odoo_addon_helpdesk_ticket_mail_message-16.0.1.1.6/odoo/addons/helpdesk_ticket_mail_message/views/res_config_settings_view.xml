<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="helpdesk_ticket_mail_message_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.mail.message.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="helpdesk_mgmt.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]/div[@data-key='helpdesk_mgmt']" position="inside">
                <div class="support_contact_tag">
                    <h2>Reply-To &amp; Forward-To Templates:</h2>
                    <div class="row mt16 o_settings_container">
                        <group>
                            <field name="helpdesk_reply_to_template_id" options="{'no_create': True}" />
                            <field name="helpdesk_forward_to_template_id" options="{'no_create': True}" />
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
