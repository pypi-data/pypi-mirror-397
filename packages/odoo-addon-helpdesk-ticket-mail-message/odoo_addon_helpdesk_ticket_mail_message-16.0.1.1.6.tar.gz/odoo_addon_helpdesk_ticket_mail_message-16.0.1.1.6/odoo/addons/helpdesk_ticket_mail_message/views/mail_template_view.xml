<odoo>
    <record id="mail_template_view_helpdesk_ticket_tags" model="ir.ui.view">
        <field name="name">mail.template.view.helpdesk.ticket.tags</field>
        <field name="model">mail.template</field>
        <field name="inherit_id" ref="mail.email_template_form"/>
        <field name="arch" type="xml">
            <field name="auto_delete" position="after">
                <field
                    name="helpdesk_ticket_tag_ids"
                    string="Helpdesk Ticket Tags"
                    widget="many2many_tags"
                    attrs="{'invisible':[('model_id', '!=', %(helpdesk_mgmt.model_helpdesk_ticket)d)]}"/>
                <field
                    name="include_history_in_email"
                    string="Include Message History in Email"
                    attrs="{'invisible':[('model_id', '!=', %(helpdesk_mgmt.model_helpdesk_ticket)d)]}"/>
            </field>
        </field>
    </record>
</odoo>