<odoo>

<record id="helpdesk_ticket_view_search" model="ir.ui.view">
    <field name="name">helpdesk_ticket - search</field>
    <field name="model">helpdesk_ticket</field>
    <field name="inherit_id" ref="ssi_helpdesk.helpdesk_ticket_view_search" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//separator[@name='activity']" position="before">
                <separator name="odoo_implementation" />
                <filter
                        name="is_odoo"
                        string="Is Odoo Implementation"
                        domain="[('odoo_implementation_id','!=',False)]"
                    />
                <filter
                        name="is_not_odoo"
                        string="Is Not Odoo Implementation"
                        domain="[('odoo_implementation_id','=',False)]"
                    />
            </xpath>
        </data>
    </field>
</record>

<record id="helpdesk_ticket_view_tree" model="ir.ui.view">
     <field name="name">helpdesk_ticket tree</field>
     <field name="model">helpdesk_ticket</field>
     <field name="inherit_id" ref="ssi_helpdesk.helpdesk_ticket_view_tree" />
     <field name="mode">extension</field>
     <field name="arch" type="xml">
          <data>
               <xpath expr="//field[@name='type_id']" position="after">
                    <field name="odoo_implementation_id" optional="show" />
               </xpath>
          </data>
     </field>
</record>
<record id="helpdesk_ticket_view_form" model="ir.ui.view">
     <field name="name">helpdesk_ticket form</field>
     <field name="model">helpdesk_ticket</field>
     <field name="inherit_id" ref="ssi_helpdesk.helpdesk_ticket_view_form" />
     <field name="mode">extension</field>
     <field name="arch" type="xml">
          <data>
               <xpath expr="//field[@name='type_id']" position="after">
                    <field
                        name="odoo_implementation_id"
                        domain="[('partner_id','=',commercial_partner_id)]"
                    />
                    <field name="odoo_version_id" />
                    <field name="odoo_feature_ids" widget="many2many_tags" />
               </xpath>
               <xpath expr="//page[@name='communication']" position="after">
                    <page string="Odoo Implementation">
                         <separator string="Related Use Cases" colspan="4" />
                         <field name="odoo_use_case_ids" />
                         <group name="cr" string="Change Request" colspan="4" col="2">
                              <field
                                name="need_cr"
                                string="Required"
                                widget="boolean_toggle"
                            />
                              <field name="cr_state" string="State" />
                         </group>
                         <field name="odoo_change_request_ids" nolabel="1" />
                         <group
                            name="ccr"
                            string="Configuration Change Record"
                            colspan="4"
                            col="2"
                        >
                              <field
                                name="need_ccr"
                                string="Required"
                                widget="boolean_toggle"
                            />
                              <field name="ccr_state" string="State" />
                         </group>
                         <field
                            name="odoo_configuration_change_record_ids"
                            nolabel="1"
                        />
                         <group name="issue" string="Issue" colspan="4" col="2">
                              <field name="issue_state" string="State" />
                         </group>
                         <field name="odoo_feature_issue_ids" nolabel="1" />
                    </page>
               </xpath>
          </data>
     </field>
</record>
</odoo>
