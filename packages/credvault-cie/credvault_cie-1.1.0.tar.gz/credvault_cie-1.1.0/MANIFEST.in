# MANIFEST.in - PyPI Distribution
# Include credvault_utils package code (NOT source code of main project)

# Include package files
recursive-include src/credvault_utils *.py
include README.md

include LICENSE

# Exclude unwanted files
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude *.so
global-exclude *.dll
global-exclude *.exe
global-exclude .git
global-exclude .env*
global-exclude *.log

# Exclude source directories that are NOT part of package
recursive-exclude backend *
recursive-exclude frontend *
recursive-exclude jstests *
recursive-exclude buildscripts *
recursive-exclude bazel *
recursive-exclude cli *
recursive-exclude node_modules *



