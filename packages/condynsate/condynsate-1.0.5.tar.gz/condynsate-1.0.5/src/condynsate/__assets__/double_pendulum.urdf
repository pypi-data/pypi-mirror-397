<?xml version="1.0" ?>
<robot name="double_pendulum">
    

    <!-- ########### MATERIALS ########### -->

    <material name="industrial">
        <color rgba="0.114 0.345 0.655 1" />
    </material>
    
    <material name="arches">
        <color rgba="0 0.624 0.831 1" />
    </material>
    
    <material name = "heritage">
        <color rgba = "0.961 0.510 0.118 1" />
    </material>
    
        
    <!-- ########### LINKS ########### -->

    <link name="base">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                  <mesh filename="Cube_1x1x1_lower_origin.stl" scale="0.1 0.1 0.1"/>
            </geometry>
            <material name = "heritage"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="0"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
    </link>
    
    <link name="arm_1">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="Cylinder_1x1_lower_origin.stl" scale="0.05 0.05 1.0"/>
            </geometry>
            <material name = "arches"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="0"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
    </link>
    
    <link name="mass_1">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="Sphere_1_center_origin.stl" scale="0.2 0.2 0.2"/>
            </geometry>
            <material name = "industrial"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="2"/>
            <inertia ixx="0.008" ixy="0" ixz="0" iyy="0.008" iyz="0" izz="0.008"/>
        </inertial>
    </link>

    <link name="arm_2">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="Cylinder_1x1_lower_origin.stl" scale="0.05 0.05 1.0"/>
            </geometry>
            <material name = "arches"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="0"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
    </link>
    
    <link name="mass_2">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="Sphere_1_center_origin.stl" scale="0.2 0.2 0.2"/>
            </geometry>
            <material name = "industrial"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="2"/>
            <inertia ixx="0.008" ixy="0" ixz="0" iyy="0.008" iyz="0" izz="0.008"/>
        </inertial>
    </link>

    

    <!-- ########### JOINTS ########### -->

    <joint name="base_to_arm_1" type="continuous">
        <parent link = "base" />
        <child link = "arm_1" />
        <origin rpy="0 0 0" xyz = "0 0 0" />
        <axis xyz = "0 -1 0" />
    </joint>
    
    <joint name="arm_1_to_mass_1" type="fixed">
        <parent link = "arm_1" />
        <child link = "mass_1" />
        <origin rpy="0 0 0" xyz = "0 0 1" />
    </joint>

    <joint name="mass_1_to_arm_2" type="continuous">
        <parent link = "mass_1" />
        <child link = "arm_2" />
        <origin rpy="0 0 0" xyz = "0 0 0" />
        <axis xyz = "0 -1 0" />
    </joint>
    
    <joint name="arm_2_to_mass_2" type="fixed">
        <parent link = "arm_2" />
        <child link = "mass_2" />
        <origin rpy="0 0 0" xyz = "0 0 1" />
    </joint>


</robot>

