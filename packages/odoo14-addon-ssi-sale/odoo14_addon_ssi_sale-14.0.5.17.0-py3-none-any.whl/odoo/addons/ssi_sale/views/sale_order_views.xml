<odoo>
<record id="view_order_tree" model="ir.ui.view">
    <field name="name">sale.order.tree</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_tree" />
    <field name="priority" eval="100" />
    <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="replace">
            <field name="id" optional="hide" />
            <field name="display_name" string="# Document" />
        </xpath>
        <xpath expr="//field[@name='invoice_status']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='invoice_status']" position="before">
            <field name="percent_invoiced" widget="percentage" />
            <field name="percent_delivered" widget="percentage" />
            <field name="state" />
        </xpath>
    </field>
</record>

<record id="view_order_form" model="ir.ui.view">
    <field name="name">sale.order.form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form" />
    <field name="arch" type="xml">
        <xpath expr="//field[@name='state']" position="attributes">
            <attribute name="statusbar_visible">draft,confirm,sale</attribute>
        </xpath>
        <xpath expr="//field[@name='name']" position="attributes">
            <attribute name="readonly">0</attribute>
            <attribute
                    name="attrs"
                >{'readonly':[('manual_number_ok','=',False)]}</attribute>
        </xpath>
        <xpath expr="//button[@name='payment_action_capture']" position="attributes">
            <attribute
                    name="attrs"
                >{'invisible': [('capture_ok', '!=', True)]}</attribute>
        </xpath>
        <xpath expr="//button[@name='payment_action_void']" position="attributes">
            <attribute name="attrs">{'invisible': [('void_ok', '!=', True)]}</attribute>
        </xpath>
        <xpath
                expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d'][1]"
                position="attributes"
            >
            <attribute
                    name="attrs"
                >{'invisible': [('invoice_ok', '!=', True)]}</attribute>
            <attribute name="context">{'invoice_status': invoice_status}</attribute>
        </xpath>
        <xpath expr="//button[@name='action_view_invoice']" position="attributes">
            <attribute
                    name="attrs"
                >{'invisible': [('view_invoice_ok', '!=', True)]}</attribute>
        </xpath>
        <xpath
                expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d'][2]"
                position="attributes"
            >
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//button[@name='action_quotation_send'][1]" position="attributes">
            <attribute
                    name="attrs"
                >{'invisible': [('email_ok', '!=', True)]}</attribute>
            <attribute name="states" />
            <attribute name="class" />
        </xpath>
        <xpath expr="//button[@name='action_quotation_send'][2]" position="attributes">
            <attribute
                    name="attrs"
                >{'invisible': [('proforma_ok', '!=', True)]}</attribute>
            <attribute name="states" />
            <attribute name="class" />
        </xpath>
        <xpath expr="//button[@name='action_quotation_send'][3]" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//button[@name='action_quotation_send'][4]" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//button[@name='action_confirm']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//button[@name='action_cancel']" position="attributes">
            <attribute name="states" />
            <attribute
                    name="attrs"
                >{'invisible': [('cancel_ok', '!=', True)]}</attribute>
        </xpath>

        <xpath expr="//button[@name='action_draft']" position="attributes">
            <attribute name="states" />
            <attribute
                    name="attrs"
                >{'invisible': [('draft_ok', '!=', True)]}</attribute>
        </xpath>
        <xpath expr="//field[@name='order_line']" position="attributes">
            <attribute name="attrs" />
        </xpath>
        <xpath expr="//field[@name='partner_shipping_id']" position="after">
            <field name="type_id" options="{'no_open': True, 'no_create': True}" />
            <field name="allowed_pricelist_ids" invisible="1" />
        </xpath>
        <xpath expr="//field[@name='pricelist_id']" position="attributes">
            <attribute name="domain">[('id', 'in', allowed_pricelist_ids)]</attribute>
        </xpath>
        <xpath
                expr="//group[@name='order_details']/div[@class='o_td_label'][1]"
                position="attributes"
            >
            <attribute name="groups" />
        </xpath>
        <xpath
                expr="//group[@name='order_details']/field[@name='date_order'][1]"
                position="attributes"
            >
            <attribute name="groups" />
        </xpath>
        <xpath expr="//button[@name='action_quotation_send']" position="before">
            <button
                    name="action_confirm_custom"
                    string="Confirm"
                    type="object"
                    class="oe_highlight"
                    confirm="Confirm data. Are you sure?"
                    attrs="{'invisible':[('confirm_ok','!=',True)]}"
                />
            <button
                    name="action_approve_approval"
                    string="Approve"
                    type="object"
                    class="oe_highlight"
                    confirm="Approve data. Are you sure?"
                    attrs="{'invisible':[('approve_ok','!=',True)]}"
                />
            <button
                    name="action_reject_approval"
                    string="Reject"
                    type="object"
                    confirm="Reject data. Are you sure?"
                    attrs="{'invisible':[('reject_ok','!=',True)]}"
                />
            <button
                    name="action_reload_approval_template"
                    string="Restart Approval Process"
                    type="object"
                    confirm="Restart approval process. Are you sure?"
                    attrs="{'invisible':[('restart_approval_ok','!=',True)]}"
                />
        </xpath>
        <xpath expr="//page[@name='order_lines']" position="after">
            <page name="policy" string="Policies" groups="base.group_system">
                <group name="policy_1" colspan="4" col="2">
                    <field name="policy_template_id" />
                    <button
                            name="action_reload_policy_template"
                            type="object"
                            string="Reload Template Policy"
                            class="oe_highlight"
                            icon="fa-refresh"
                        />
                </group>
                <group name="policy_2" colspan="4" col="2">
                    <field name="capture_ok" />
                    <field name="void_ok" />
                    <field name="invoice_ok" />
                    <field name="view_invoice_ok" />
                    <field name="email_ok" />
                    <field name="proforma_ok" />
                    <field name="confirm_ok" />
                    <field name="cancel_ok" />
                    <field name="draft_ok" />
                    <field name="done_ok" />
                    <field name="unlock_ok" />
                    <field name="manual_number_ok" />
                    <field name="confirm_ok" />
                    <field name="approve_ok" />
                    <field name="reject_ok" />
                    <field name="restart_approval_ok" />
                </group>
            </page>
        </xpath>

        <xpath expr="//group[@name='note_group']" position="before">
            <group name="group_extra" colspan="4" col="2">
                <field name="total_qty" />
                <field name="qty_to_deliver" />
                <field name="qty_delivered" />
                <field name="percent_delivered" widget="percentage" />
                <field name="amount_delivered" />
                <field name="amount_undelivered" />
                <field name="qty_invoiced" />
                <field name="percent_invoiced" widget="percentage" />
                <field name="amount_invoice" />
                <field name="amount_uninvoice" />
                <field name="revenue_without_tax" />
                <field name="revenue_with_tax" />
                <field name="product_cost" />
                <field name="profit_without_tax" />
                <field name="profit_with_tax" />
            </group>
        </xpath>

        <xpath
                expr="//field[@name='order_line']/tree/field[@name='state']"
                position="before"
            >
            <field name="percent_delivered" widget="percentage" />
            <field name="percent_invoiced" widget="percentage" />
            <field name="amount_invoice" optional="hide" />
            <field name="amount_uninvoice" optional="hide" />
            <field name="amount_delivered" optional="hide" />
            <field name="amount_undelivered" optional="hide" />
            <field name="revenue_without_tax" optional="hide" />
            <field name="revenue_with_tax" optional="hide" />
            <field name="product_cost" optional="hide" />
            <field name="profit_without_tax" optional="hide" />
            <field name="profit_with_tax" optional="hide" />
        </xpath>
    </field>
</record>
<record id="view_sales_order_auto_done_setting" model="ir.ui.view">
    <field name="name">sale.order.form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_sales_order_auto_done_setting" />
    <field name="arch" type="xml">
        <xpath expr="//button[@name='action_done']" position="after">
            <field name="done_ok" invisible="1" />
            <field name="unlock_ok" invisible="1" />
        </xpath>
        <xpath expr="//button[@name='action_done']" position="attributes">
            <attribute name="attrs">{'invisible': [('done_ok', '!=', True)]}</attribute>
            <attribute name="states" />
        </xpath>
        <xpath expr="//button[@name='action_unlock']" position="attributes">
            <attribute
                    name="attrs"
                >{'invisible': [('unlock_ok', '!=', True)]}</attribute>
            <attribute name="states" />
        </xpath>
    </field>
</record>

<record id="sale.view_sales_order_auto_done_setting" model="ir.ui.view">
    <field name="groups_id" eval="[(6, 0, [])]" />
</record>

<record id="sale.menu_sale_order_invoice" model="ir.ui.menu">
    <field name="groups_id" eval="[(6, 0, [ref('original_sale_group')])]" />
</record>

<record id="sale.menu_sale_order_upselling" model="ir.ui.menu">
    <field name="groups_id" eval="[(6, 0, [ref('original_sale_group')])]" />
</record>

<record id="sale.menu_sale_quotations" model="ir.ui.menu">
    <field name="groups_id" eval="[(6, 0, [ref('original_sale_group')])]" />
</record>

<record id="sale.menu_sale_order" model="ir.ui.menu">
    <field name="groups_id" eval="[(6, 0, [ref('original_sale_group')])]" />
</record>

<record id="sale.report_sales_team" model="ir.ui.menu">
    <field name="groups_id" eval="[(6, 0, [ref('original_sale_group')])]" />
</record>

<record id="sale_order_action" model="ir.actions.act_window">
    <field name="name">Sales Orders</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">sale.order</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale" />
    <field name="domain">[]</field>
    <field name="context">{}</field>
</record>

    <menuitem
        id="sale_order_menu"
        name="Sale Orders"
        parent="sale.sale_order_menu"
        action="sale_order_action"
        groups="sale_order_viewer_group"
        sequence="110"
    />
</odoo>
