# FlowMason Studio - Development Dockerfile
# Optimized for hot reload and faster builds

FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    FLOWMASON_HOST=0.0.0.0 \
    FLOWMASON_PORT=8999 \
    FLOWMASON_DEBUG=true

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy and install Python dependencies first (for caching)
COPY pyproject.toml README.md ./
COPY core/ ./core/
COPY studio/ ./studio/
COPY lab/ ./lab/

# Install in editable mode for development
RUN pip install --no-cache-dir -e ".[dev]"

# Create data directory
RUN mkdir -p /app/data /app/pipelines

# Expose port
EXPOSE 8999

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8999/health || exit 1

# Start with reload for development
CMD ["python", "-m", "uvicorn", "flowmason_studio.api.app:app", "--host", "0.0.0.0", "--port", "8999", "--reload"]
