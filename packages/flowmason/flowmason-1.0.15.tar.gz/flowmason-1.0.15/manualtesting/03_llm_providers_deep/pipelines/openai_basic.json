{
  "name": "openai_basic",
  "description": "Test basic OpenAI GPT-4 generation",
  "version": "1.0.0",
  "input_schema": {
    "type": "object",
    "properties": {
      "prompt": {"type": "string"}
    },
    "required": ["prompt"]
  },
  "stages": {
    "generate": {
      "component": "generator",
      "config": {
        "provider": "openai",
        "model": "gpt-4",
        "system_prompt": "You are a helpful assistant. Be concise.",
        "user_prompt": "{{input.prompt}}",
        "max_tokens": 150,
        "temperature": 0.7
      }
    }
  },
  "output_stage": "generate"
}
