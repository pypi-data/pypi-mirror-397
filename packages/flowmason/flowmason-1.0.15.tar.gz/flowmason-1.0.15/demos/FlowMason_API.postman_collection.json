    {
      "name": "Real AI Pipeline Examples",
      "description": "Examples of running real AI pipelines with actual LLM calls.",
      "item": [
        {
          "name": "1. Find Content Creation Pipeline",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.items && jsonData.items.length > 0) {",
                  "    var pipeline = jsonData.items.find(p => p.name.includes('Content Creation'));",
                  "    if (pipeline) {",
                  "        pm.collectionVariables.set('pipeline_id', pipeline.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
