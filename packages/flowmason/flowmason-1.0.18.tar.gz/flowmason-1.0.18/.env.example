# FlowMason Configuration
# Copy this to .env and fill in your values

# =============================================================================
# FlowMason Settings
# =============================================================================

FLOWMASON_PACKAGES_PATH=~/.flowmason/packages
FLOWMASON_HOST=0.0.0.0
FLOWMASON_PORT=8999
FLOWMASON_DEBUG=true

# =============================================================================
# Database Configuration
# =============================================================================

# For PostgreSQL (staging/production):
# DATABASE_URL=postgresql://flowmason:password@postgres:5432/flowmason

# For SQLite (local development - default if DATABASE_URL not set):
# FLOWMASON_DB_PATH=~/.flowmason/studio.db

# =============================================================================
# LLM Provider API Keys (add the ones you use)
# =============================================================================

# ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-proj-...
# GOOGLE_API_KEY=AIza...
# GROQ_API_KEY=gsk_...

# =============================================================================
# Docker Staging/Production Configuration
# =============================================================================

# Domain for TLS certificate (required for staging/production)
# DOMAIN=flowmason.example.com

# Email for Let's Encrypt certificates
# ACME_EMAIL=admin@example.com

# PostgreSQL credentials (required for staging/production)
# POSTGRES_DB=flowmason
# POSTGRES_USER=flowmason
# POSTGRES_PASSWORD=change-me-to-strong-password

# Redis password (required for staging/production)
# REDIS_PASSWORD=change-me-to-strong-password

# Secrets encryption key (32+ characters, required for production)
# Generate with: openssl rand -base64 32
# FLOWMASON_SECRETS_KEY=change-me-to-32-char-secret-key-here

# =============================================================================
# Scheduler Configuration
# =============================================================================

# Enable/disable the background scheduler for cron-scheduled pipelines
# FLOWMASON_SCHEDULER_ENABLED=true

# How often to check for due schedules (seconds)
# FLOWMASON_SCHEDULER_POLL_INTERVAL=60

# Maximum concurrent scheduled pipeline executions
# FLOWMASON_SCHEDULER_MAX_CONCURRENT=5

# =============================================================================
# Production Only
# =============================================================================

# Image version tag (required for production)
# VERSION=0.7.3

# Number of Studio replicas for horizontal scaling
# STUDIO_REPLICAS=2

# Pipelines directory to mount
# PIPELINES_DIR=./pipelines
