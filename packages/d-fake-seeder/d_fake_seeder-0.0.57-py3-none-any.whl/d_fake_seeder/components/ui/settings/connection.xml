<?xml version="1.0" encoding="UTF-8"?>
<object class="GtkScrolledWindow" id="settings_connection_scroll">
    <property name="hscrollbar-policy">never</property>
    <property name="vscrollbar-policy">automatic</property>
    <child>
        <object class="GtkBox" id="settings_connection_box">
            <property name="orientation">vertical</property>
            <property name="spacing">18</property>
            <property name="margin-start">24</property>
            <property name="margin-end">24</property>
            <property name="margin-top">24</property>
            <property name="margin-bottom">24</property>

            <!-- Listening Port Group -->
            <child>
                <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <child>
                        <object class="GtkLabel">
                            <property name="label" translatable="yes">&lt;b&gt;Listening Port&lt;/b&gt;</property>
                            <property name="use-markup">True</property>
                            <property name="halign">start</property>
                        </object>
                    </child>
                    <child>
                        <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">8</property>
                            <property name="margin-start">12</property>

                            <!-- Port number -->
                            <child>
                                <object class="GtkBox">
                                    <property name="spacing">12</property>
                                    <property name="halign">fill</property>
                                    <child>
                                        <object class="GtkLabel">
                                            <property name="label" translatable="yes">Port:</property>
                                            <property name="halign">start</property>
                                            <property name="valign">center</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">20</property>
                                        </object>
                                    </child>
                                    <child>
                                        <object class="GtkSpinButton" id="settings_listening_port">
                                            <property name="adjustment">
                                                <object class="GtkAdjustment">
                                                    <property name="lower">1024</property>
                                                    <property name="upper">65535</property>
                                                    <property name="value">6881</property>
                                                    <property name="step-increment">1</property>
                                                    <property name="page-increment">10</property>
                                                </object>
                                            </property>
                                            <property name="tooltip-text" translatable="yes">Port for incoming BitTorrent connections (1024-65535)</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">8</property>
                                            <property name="numeric">True</property>
                                        </object>
                                    </child>
                                    <child>
                                        <object class="GtkButton" id="settings_random_port_button">
                                            <property name="label" translatable="yes">Random</property>
                                            <property name="tooltip-text" translatable="yes">Generate a random port number</property>
                                        </object>
                                    </child>
                                </object>
                            </child>

                            <!-- UPnP/NAT-PMP -->
                            <child>
                                <object class="GtkBox">
                                    <property name="spacing">12</property>
                                    <property name="halign">start</property>
                                    <child>
                                        <object class="GtkSwitch" id="settings_upnp_enabled">
                                            <property name="valign">center</property>
                                            <property name="tooltip-text" translatable="yes">Automatically configure router port forwarding using UPnP/NAT-PMP</property>
                                        </object>
                                    </child>
                                    <child>
                                        <object class="GtkLabel">
                                            <property name="label" translatable="yes">Enable UPnP/NAT-PMP port mapping</property>
                                            <property name="halign">start</property>
                                            <property name="valign">center</property>
                                        </object>
                                    </child>
                                </object>
                            </child>
                        </object>
                    </child>
                </object>
            </child>

            <!-- Connection Limits Group -->
            <child>
                <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <child>
                        <object class="GtkLabel">
                            <property name="label" translatable="yes">&lt;b&gt;Connection Limits&lt;/b&gt;</property>
                            <property name="use-markup">True</property>
                            <property name="halign">start</property>
                        </object>
                    </child>
                    <child>
                        <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">12</property>
                            <property name="margin-start">12</property>

                            <!-- Max global connections -->
                            <child>
                                <object class="GtkBox">
                                    <property name="spacing">12</property>
                                    <property name="halign">fill</property>
                                    <child>
                                        <object class="GtkLabel">
                                            <property name="label" translatable="yes">Max global connections:</property>
                                            <property name="halign">start</property>
                                            <property name="valign">center</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">20</property>
                                        </object>
                                    </child>
                                    <child>
                                        <object class="GtkSpinButton" id="settings_max_global_connections">
                                            <property name="adjustment">
                                                <object class="GtkAdjustment">
                                                    <property name="lower">1</property>
                                                    <property name="upper">9999</property>
                                                    <property name="value">200</property>
                                                    <property name="step-increment">1</property>
                                                    <property name="page-increment">10</property>
                                                </object>
                                            </property>
                                            <property name="tooltip-text" translatable="yes">Maximum number of connections to all torrents</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">8</property>
                                            <property name="numeric">True</property>
                                        </object>
                                    </child>
                                </object>
                            </child>

                            <!-- Max connections per torrent -->
                            <child>
                                <object class="GtkBox">
                                    <property name="spacing">12</property>
                                    <property name="halign">fill</property>
                                    <child>
                                        <object class="GtkLabel">
                                            <property name="label" translatable="yes">Max per torrent:</property>
                                            <property name="halign">start</property>
                                            <property name="valign">center</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">20</property>
                                        </object>
                                    </child>
                                    <child>
                                        <object class="GtkSpinButton" id="settings_max_per_torrent">
                                            <property name="adjustment">
                                                <object class="GtkAdjustment">
                                                    <property name="lower">1</property>
                                                    <property name="upper">999</property>
                                                    <property name="value">50</property>
                                                    <property name="step-increment">1</property>
                                                    <property name="page-increment">10</property>
                                                </object>
                                            </property>
                                            <property name="tooltip-text" translatable="yes">Maximum number of connections per individual torrent</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">8</property>
                                            <property name="numeric">True</property>
                                        </object>
                                    </child>
                                </object>
                            </child>

                            <!-- Max upload slots -->
                            <child>
                                <object class="GtkBox">
                                    <property name="spacing">12</property>
                                    <property name="halign">fill</property>
                                    <child>
                                        <object class="GtkLabel">
                                            <property name="label" translatable="yes">Max upload slots:</property>
                                            <property name="halign">start</property>
                                            <property name="valign">center</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">20</property>
                                        </object>
                                    </child>
                                    <child>
                                        <object class="GtkSpinButton" id="settings_max_upload_slots">
                                            <property name="adjustment">
                                                <object class="GtkAdjustment">
                                                    <property name="lower">1</property>
                                                    <property name="upper">999</property>
                                                    <property name="value">4</property>
                                                    <property name="step-increment">1</property>
                                                    <property name="page-increment">5</property>
                                                </object>
                                            </property>
                                            <property name="tooltip-text" translatable="yes">Maximum number of simultaneous upload slots</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">8</property>
                                            <property name="numeric">True</property>
                                        </object>
                                    </child>
                                </object>
                            </child>
                        </object>
                    </child>
                </object>
            </child>

            <!-- Proxy Settings Group -->
            <child>
                <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <child>
                        <object class="GtkLabel">
                            <property name="label" translatable="yes">&lt;b&gt;Proxy Settings&lt;/b&gt;</property>
                            <property name="use-markup">True</property>
                            <property name="halign">start</property>
                        </object>
                    </child>
                    <child>
                        <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">12</property>
                            <property name="margin-start">12</property>

                            <!-- Proxy type -->
                            <child>
                                <object class="GtkBox">
                                    <property name="spacing">12</property>
                                    <property name="halign">fill</property>
                                    <child>
                                        <object class="GtkLabel">
                                            <property name="label" translatable="yes">Type:</property>
                                            <property name="halign">start</property>
                                            <property name="valign">center</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">15</property>
                                        </object>
                                    </child>
                                    <child>
                                        <object class="GtkDropDown" id="settings_proxy_type">
                                            <property name="model">
                                                <object class="GtkStringList">
                                                    <items>
                                                        <item translatable="yes">None</item>
                                                        <item translatable="yes">HTTP</item>
                                                        <item translatable="yes">SOCKS5</item>
                                                        <item translatable="yes">SOCKS4</item>
                                                    </items>
                                                </object>
                                            </property>
                                            <property name="tooltip-text" translatable="yes">Select proxy type for connections</property>
                                            <property name="hexpand">True</property>
                                        </object>
                                    </child>
                                </object>
                            </child>

                            <!-- Proxy server -->
                            <child>
                                <object class="GtkBox">
                                    <property name="spacing">12</property>
                                    <property name="halign">fill</property>
                                    <child>
                                        <object class="GtkLabel">
                                            <property name="label" translatable="yes">Server:</property>
                                            <property name="halign">start</property>
                                            <property name="valign">center</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">15</property>
                                        </object>
                                    </child>
                                    <child>
                                        <object class="GtkEntry" id="settings_proxy_server">
                                            <property name="placeholder-text" translatable="yes">proxy.example.com</property>
                                            <property name="tooltip-text" translatable="yes">Proxy server hostname or IP address</property>
                                            <property name="hexpand">True</property>
                                        </object>
                                    </child>
                                </object>
                            </child>

                            <!-- Proxy port -->
                            <child>
                                <object class="GtkBox">
                                    <property name="spacing">12</property>
                                    <property name="halign">fill</property>
                                    <child>
                                        <object class="GtkLabel">
                                            <property name="label" translatable="yes">Port:</property>
                                            <property name="halign">start</property>
                                            <property name="valign">center</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">15</property>
                                        </object>
                                    </child>
                                    <child>
                                        <object class="GtkSpinButton" id="settings_proxy_port">
                                            <property name="adjustment">
                                                <object class="GtkAdjustment">
                                                    <property name="lower">1</property>
                                                    <property name="upper">65535</property>
                                                    <property name="value">8080</property>
                                                    <property name="step-increment">1</property>
                                                    <property name="page-increment">10</property>
                                                </object>
                                            </property>
                                            <property name="tooltip-text" translatable="yes">Proxy server port number</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">8</property>
                                            <property name="numeric">True</property>
                                        </object>
                                    </child>
                                </object>
                            </child>

                            <!-- Proxy authentication -->
                            <child>
                                <object class="GtkBox">
                                    <property name="spacing">12</property>
                                    <property name="halign">start</property>
                                    <child>
                                        <object class="GtkSwitch" id="settings_proxy_auth_enabled">
                                            <property name="valign">center</property>
                                            <property name="tooltip-text" translatable="yes">Enable proxy authentication</property>
                                        </object>
                                    </child>
                                    <child>
                                        <object class="GtkLabel">
                                            <property name="label" translatable="yes">Use authentication</property>
                                            <property name="halign">start</property>
                                            <property name="valign">center</property>
                                        </object>
                                    </child>
                                </object>
                            </child>

                            <!-- Proxy username -->
                            <child>
                                <object class="GtkBox" id="settings_proxy_auth_box">
                                    <property name="spacing">12</property>
                                    <property name="halign">fill</property>
                                    <property name="sensitive">False</property>
                                    <child>
                                        <object class="GtkLabel">
                                            <property name="label" translatable="yes">Username:</property>
                                            <property name="halign">start</property>
                                            <property name="valign">center</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">15</property>
                                        </object>
                                    </child>
                                    <child>
                                        <object class="GtkEntry" id="settings_proxy_username">
                                            <property name="placeholder-text" translatable="yes">username</property>
                                            <property name="tooltip-text" translatable="yes">Proxy authentication username</property>
                                            <property name="hexpand">True</property>
                                        </object>
                                    </child>
                                </object>
                            </child>

                            <!-- Proxy password -->
                            <child>
                                <object class="GtkBox">
                                    <property name="spacing">12</property>
                                    <property name="halign">fill</property>
                                    <property name="sensitive">False</property>
                                    <child>
                                        <object class="GtkLabel">
                                            <property name="label" translatable="yes">Password:</property>
                                            <property name="halign">start</property>
                                            <property name="valign">center</property>
                                            <property name="hexpand">False</property>
                                            <property name="width-chars">15</property>
                                        </object>
                                    </child>
                                    <child>
                                        <object class="GtkPasswordEntry" id="settings_proxy_password">
                                            <property name="placeholder-text" translatable="yes">password</property>
                                            <property name="tooltip-text" translatable="yes">Proxy authentication password</property>
                                            <property name="hexpand">True</property>
                                            <property name="show-peek-icon">True</property>
                                        </object>
                                    </child>
                                </object>
                            </child>
                        </object>
                    </child>
                </object>
            </child>
        </object>
    </child>
</object>
