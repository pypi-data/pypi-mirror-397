<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Action: just orders of current group, fullscreen -->
    <record id="action_repair_orders_by_group" model="ir.actions.act_window">
        <field name="name">Group Repairs</field>
        <field name="res_model">repair.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('group_id', '=', active_id)]</field>
        <field name="context">
            {
                'search_default_group_id': active_id,
                'default_group_id': active_id
            }
        </field>
    </record>

    <!-- List of groups -->
    <record id="view_repair_order_group_list" model="ir.ui.view">
        <field name="name">repair.order.group.list</field>
        <field name="model">repair.order.group</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="partner_id" />
                <field name="repair_count" />
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_repair_order_group_form" model="ir.ui.view">
        <field name="name">repair.order.group.form</field>
        <field name="model">repair.order.group</field>
        <field name="arch" type="xml">
            <form string="Repair Order Group">
                <header>
                    <!-- Smart-button: open fullscreen for orders of this group -->
                    <button
                        type="action"
                        name="%(repair_order_group.action_repair_orders_by_group)d"
                        class="oe_stat_button"
                        icon="fa-wrench"
                    >
                        <field
                            name="repair_count"
                            widget="statinfo"
                            string=" Repairs"
                        />
                    </button>
                </header>

                <sheet>
                    <group>
                        <field name="name" />
                        <field name="partner_id" />
                        <field name="repair_count" readonly="1" />
                    </group>
                    <notebook>
                        <page string="Repairs">
                            <field
                                name="repair_ids"
                                mode="list,form"
                                context="{'form_view_ref': 'repair.view_repair_order_form'}"
                            >
                                <list>
                                    <field name="name" />
                                    <field name="state" />
                                    <field name="partner_id" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_repair_order_group" model="ir.actions.act_window">
        <field name="name">Repair Order Groups</field>
        <field name="res_model">repair.order.group</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_repair_order_group"
        name="Repair Groups"
        parent="repair.repair_menu_config"
        action="action_repair_order_group"
        sequence="10"
    />
</odoo>
