include README.md
include LICENSE
include pyproject.toml
recursive-include shadowlib *.py *.pyi
recursive-include tests *.py

# Exclude generated files (downloaded to ~/.cache/shadowlib/ at runtime)
exclude shadowlib/generated/query_proxies.py
exclude shadowlib/generated/constants.py
recursive-exclude shadowlib/generated/constants *.py

# Exclude caches
prune tests/__pycache__
prune shadowlib/__pycache__

# Exclude data directory
prune data
