# Include package data
recursive-include chedito/static *
recursive-include chedito/templates *

# Include documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include configuration files
include pyproject.toml

# Exclude development and test files
exclude .gitignore
exclude .pre-commit-config.yaml
prune tests
prune docs
prune examples
prune .github
prune __pycache__
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.orig
global-exclude *~
