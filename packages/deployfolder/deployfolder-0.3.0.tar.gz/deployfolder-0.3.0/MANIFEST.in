# Include license file
include LICENSE

# Include documentation
include README.md
include YAML_PATHS.md
include CHANGELOG.md
include ARCHIVE_OPTIONS.md

# Exclude local-only docs
exclude LOCAL_USAGE.md

# Include test files
recursive-include tests *.py

# Exclude build artifacts and temporary files
exclude .gitignore
exclude azure-pipelines.yml
recursive-exclude azure-pipelines *
recursive-exclude glob_test_output *
recursive-exclude TestDaten *
recursive-exclude __pycache__ *
recursive-exclude *.egg-info *
recursive-exclude *.egg *
recursive-exclude build *
recursive-exclude dist *
recursive-exclude out *
recursive-exclude venv *
