  <exit-transition transition_id="ask_opinion"/>
  <permission-map name="ATContentTypes: Add File" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="ATContentTypes: Add Image" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="WebDAV Lock items" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="WebDAV UnLock items" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="WebDAV Unlock items" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Products.urban: Validate" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="opinion_given" title="opinion_given" i18n:attributes="title">
  <exit-transition transition_id="reopen"/>
  <permission-map name="ATContentTypes: Add File" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="ATContentTypes: Add Image" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="WebDAV Lock items" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="WebDAV UnLock items" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="WebDAV Unlock items" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Products.urban: Validate" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="opinion_validation" title="opinion_validation" i18n:attributes="title">
  <exit-transition transition_id="invalidate_opinion"/>
  <exit-transition transition_id="send_opinion"/>
  <permission-map name="ATContentTypes: Add File" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="ATContentTypes: Add Image" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="WebDAV Lock items" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="WebDAV UnLock items" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="WebDAV Unlock items" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Products.urban: Validate" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="waiting_opinion" title="waiting_opinion" i18n:attributes="title">
  <exit-transition transition_id="ask_validation"/>
  <exit-transition transition_id="receive_opinion"/>
  <permission-map name="ATContentTypes: Add File" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="ATContentTypes: Add Image" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Reader</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="WebDAV Lock items" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="WebDAV UnLock items" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="WebDAV Unlock items" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Contributor</permission-role>
