    <field name="arch" type="xml">
      <button name="action_show_invoices" position="before">
        <button class="oe_stat_button" type="action" name="%(somconnexio.act_contract_contract_2_mail_activity)d" icon="fa-clock-o">
          <field name="mail_activity_count" widget="statinfo"/>
        </button>
        <button class="oe_stat_button" type="action" name="%(somconnexio.act_contract_contract_pack_related_contracts)d" icon="fa-clock-o" attrs="{'invisible': [('number_contracts_in_pack', '&lt;=', 1)]}">
          <field name="number_contracts_in_pack" widget="statinfo"/>
        </button>
      </button>
    </field>
  </record>
  <record id="contract_contract_view_termination_page" model="ir.ui.view">
    <field name="name">contract.contract.view.termination.page</field>
    <field name="model">contract.contract</field>
    <field name="inherit_id" ref="contract.contract_contract_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='info']" position="after">
        <page string="Termination Information" name="termination_info" attrs="{'invisible': [('is_terminated','=',False)]}">
          <group>
            <group>
              <field name="terminate_date"/>
              <field name="terminate_target_provider" readonly="1"/>
            </group>
            <group>
              <field name="terminate_reason_id"/>
              <field name="terminate_user_reason_id"/>
            </group>
          </group>
          <group>
            <field name="terminate_comment" readonly="1"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
