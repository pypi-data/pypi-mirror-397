{
    "name": "PythonPopotoAPIDevelopmentContainer",
    "build": {
        "dockerfile": "../docker/Dockerfile",
        "context": "..",
        "args": {
            "USERNAME": "vscode",
            "UID": "1000",
            "GID": "1000"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "workspaceFolder": "/builds",
	"workspaceMount": "source=${localWorkspaceFolder},target=/builds,type=bind,consistency=cached",

    "mounts": [
        "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
        "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
    ],
    "postCreateCommand": "pip install --no-cache-dir lefthook && lefthook install"
}