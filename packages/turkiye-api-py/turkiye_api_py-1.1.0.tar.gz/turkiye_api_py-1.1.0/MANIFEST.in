# Include documentation
include README.md
include README_TR.md
include LICENSE
include CHANGELOG.md

# Include configuration files
include requirements.txt
include .env.example
include .env.production.recommended
include .env.production.example

# Include data files
recursive-include app/data *.json
recursive-include app/locales *.json
include app/*.json

# Include documentation
recursive-include docs *.md
recursive-include guides *.md

# Exclude development and build files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude docker-compose.yml
exclude Dockerfile
exclude gunicorn.conf.py
exclude run.py
recursive-exclude tests *
recursive-exclude temp *
recursive-exclude .github *
recursive-exclude venv *
recursive-exclude __pycache__ *
global-exclude *.py[cod]
global-exclude .DS_Store
