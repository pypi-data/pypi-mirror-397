# Turkiye API Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Server Configuration
# ============================================================================

# Host and Port
HOST=0.0.0.0
PORT=8181

# Environment (development, staging, production)
ENVIRONMENT=development

# ============================================================================
# Security Configuration
# ============================================================================

# CORS Allowed Origins (comma-separated)
# Development: Include localhost with common ports
# Production: Set to your actual domain(s)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8181

# ============================================================================
# Logging Configuration
# ============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Development: DEBUG or INFO
# Production: WARNING or ERROR
LOG_LEVEL=INFO

# Log Format (json or text)
# Development: text
# Production: json
LOG_FORMAT=text

# ============================================================================
# Rate Limiting Configuration
# ============================================================================

# Enable/disable rate limiting
RATE_LIMIT_ENABLED=false

# Requests per minute per client
RATE_LIMIT_PER_MINUTE=60

# Storage backend: "memory" or "redis"
# Use "memory" for single-instance deployments
# Use "redis" for multi-instance/distributed deployments
RATE_LIMIT_STORAGE=memory

# Redis URL (only required if RATE_LIMIT_STORAGE=redis)
# Format: redis://[username:password@]host[:port][/database]
# REDIS_URL=redis://localhost:6379

# ============================================================================
# Metrics & Monitoring Configuration
# ============================================================================

# Enable basic metrics middleware
METRICS_ENABLED=true

# Enable Prometheus metrics endpoint (/metrics)
PROMETHEUS_ENABLED=false

# ============================================================================
# Worker Configuration (Gunicorn)
# ============================================================================

# Number of worker processes (default: cpu_count * 2 + 1)
# Leave commented to use default calculation
# WORKERS=4

# ============================================================================
# Optional: Error Tracking
# ============================================================================

# Sentry DSN (for error tracking in production)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
