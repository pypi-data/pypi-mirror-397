# u2-mcp Configuration
# Managed by Ansible - do not edit manually

# Required Settings
U2_HOST={{ u2_host }}
U2_USER={{ u2_user }}
U2_PASSWORD={{ u2_password }}
U2_ACCOUNT={{ u2_account }}

# Service Settings
U2_SERVICE={{ u2_service }}
U2_PORT={{ u2_port }}
U2_SSL={{ u2_ssl | lower }}
U2_TIMEOUT={{ u2_timeout }}

# Safety Settings
U2_READ_ONLY={{ u2_read_only | lower }}
U2_MAX_RECORDS={{ u2_max_records }}
{% if u2_blocked_commands is defined and u2_blocked_commands %}
U2_BLOCKED_COMMANDS={{ u2_blocked_commands }}
{% endif %}

# Logging
LOG_LEVEL={{ u2_mcp_log_level }}
