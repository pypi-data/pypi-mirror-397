## 日志配置
# 日志环境: local（开发使用） / remote（生产使用）
LOG_ENV=local

# 日志级别
SNAIL_LOG_LEVEL=INFO
# 日志格式
SNAIL_LOG_FORMAT="%(asctime)s | %(name)-22s | %(levelname)-8s | %(message)s"
# 日志路径
SNAIL_LOG_LOCAL_FILENAME=logs/snailjob.log
# 日志备份天数
SNAIL_LOG_LOCAL_BACKUP_COUNT=60

# 远程日志上报间隔(秒)
SNAIL_LOG_REMOTE_INTERVAL=5
# 远程日志缓冲区大小(超过会全部丢弃)
SNAIL_LOG_REMOTE_BUFFER_SIZE=1000
# 远程日志上报间隔总量窗口期
SNAIL_LOG_REMOTE_BATCH_SIZE=20

# 使用 gRPC 通讯
SNAIL_USE_GRPC=true

## 业务配置
# 标签（可选），可在server界面中配置，这里只是预先设定,多个用逗号分割
SNAIL_LABELS=name:rpa-0001

# Prometheus 监控配置
SNAIL_PROMETHEUS_ENABLED=true
SNAIL_PROMETHEUS_HOST=0.0.0.0
SNAIL_PROMETHEUS_PORT=8020

# FastAPI 监控端口
SNAIL_FASTAPI_PORT=8000
## API 鉴权配置
# 主 API Key（用于文件下载等接口鉴权）
# ⚠️ 生产环境必须设置！建议使用 secrets.token_urlsafe(32) 生成
# 生成命令: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your-secure-api-key-here
# 额外的 API Keys（可选，用于多客户端场景，逗号分隔）
# EXTRA_API_KEYS=client1-key,client2-key,client3-key