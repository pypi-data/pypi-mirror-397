# Include important files
include README.md
include LICENSE
include pyproject.toml

# Include package data
recursive-include webis_html/config *.json
recursive-include webis_html/frontend *.html *.js *.css *.svg *.png
recursive-include webis_html/scripts *.py
recursive-include docs *.rst *.md

# Exclude unnecessary files
global-exclude *.pyc
global-exclude __pycache__
global-exclude .git*
global-exclude *.so
global-exclude .DS_Store
